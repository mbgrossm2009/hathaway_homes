

<div class = "container">
  <div class="row">
    <div class = "col-lg-6">
      <%= bootstrap_form_for(@review) do |f| %>
      <div id="review">
        <h4><%= f.text_area(:description, label: "Write your Review Below:", cols: 20, rows: 10)%></h4>
      </div>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.submit "Submit Review"%>
      </div>

   <div class = "col-lg-6">
     <%=image_tag("dave1.png", alt: "Example Image", id: 'dave_2', class: "img-fluid")%>
     <% end %>
     </div>
  </div>
</div>
