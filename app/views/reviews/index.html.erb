

<div class="text-center"><h1> Reviews of HathawayHomes-MA </h1></div>
<div class = "text-center"><%= link_to 'Write a Personal Review about Hathawayhomes-MA here', new_review_path, id: "new_review",remote: true%></div>
  <% @reviews.each do |review| %>
    <ul>
      <li><%=review.description%></li>

      <li>Posted by: <%= "#{review.user.first_name}"%></li>
    </ul>
        <%if current_user == review.user || review.user.admin? %>
      <ul>
        <li><%= link_to "Delete Review", review_path(review), method: :delete,  data: { confirm: "Are you sure you want to delete this Review? (This can not be Undone)"},remote: true %></li>
        <li><%= link_to "Edit Review", edit_review_path(review) %></li>
        <% end %>
      </ul>
    <% end %>
