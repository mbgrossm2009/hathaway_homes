
<div class = "text-center"><%= link_to 'Write a Personal Review about Dave', new_review_path%></div>
  <% @reviews.each do |review| %>
  <div class = "reviews container-fluid">

    <div class= "col-lg-12 review_description"> <%= review.description%></div>
    <div class = "post_by">Posted by: <%= "#{review.user.first_name }"%> </div>
    <!-- <li><%= button_to 'Like', upvote_review_path(review), method: :post, :id => 'like' %></li>
    # <li><%= button_to 'DisLike', downvote_review_path(review), method: :post, :id => 'dislike' %></li>
    <li> <%= review.votes.count - review.downvotes.count %> like(s) </li> -->
      <%if current_user == review.user || review.user.admin? %>
      <ul class = "col-lg-12 review">
        <li><%= link_to "Delete Review", review_path(review), method: :delete,  data: { confirm: "Are you sure you want to delete this Review? (This can not be Undone)" } %></li>
        <li><%= link_to "Edit Review", edit_review_path(review) %></li>
      <% end %>
        </ul>
      </div>

    <% end %>

</div>
