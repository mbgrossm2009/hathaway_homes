
<div class= "new_reviewform">
  <%= form_for @review, remote: true do |f| %>
  <ul>
<li> <%= f.label :description, "Write Your Review Down Below: " %></li>
<li> <%= f.text_area(:description, cols: 100, rows: 10, class: 'myclass')%></li>
    <%= f.hidden_field :user_id, value: current_user.id %>
  <li>  <%= f.submit "Create", id: "create" %></li>

</ul>
  <% end %>
</div>
