<!DOCTYPE html>
<html>
  <head>
    <title>HathawayHomes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>



  <body>
<h1 class= "main_title"> Hathaway Homes-MA </h1>
  <div class = "topnav">
    <div class= "links">
      <ul>
        <li><%= link_to "Learn about Dave", about_me_index_path%></li>
        <li> <%= link_to "Admin Page", users_path %> </li>
        <li> <%= link_to "HomePage", listings_path %> </li>
        <% if !user_signed_in? %>
        <li><%= link_to 'Sign In', new_user_session_path %></li>
        <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% else %>
          <li> <%= link_to "Advanced Search", new_search_path %> </li>
          <li> <%= link_to "Reviews Page", reviews_path %> </li>
          <li> <%= link_to 'Write a Personal Review about Dave', new_review_path%> </li>
          <li> <%= link_to "Add a Listing", new_listing_path %> </li>
            <li> <%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
        <% end %>
      </ul>
    </div>
  </div>



    <% if flash.any? %>
      <div class="flash">
        <div class="container">
          <%= flash[:alert] %>
    <% end %>
    <%= yield %>
  </body>
</html>
