<!DOCTYPE html>
<html>
  <head>
    <title>HathawayHomes</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>



  <body>



    <div id="header" class="container-fluid">
      <div class="row">
        <div class="col-lg-5">
          <ul class="links">
              <li><%= link_to "About Dave", about_me_index_path%></li>
              <li> <%= link_to "Admin Page", users_path %> </li>
              <li> <%= link_to "Add a Listing", new_listing_path %> </li>
              <li> <%= link_to "HomePage", listings_path %> </li>
          </ul>
        </div>
      <div class="col-lg-2">
        <img id="logo" src="http://www.euneighbours.eu/sites/default/files/2017-01/placeholder.png">
      </div>
      <div class="col-lg-5">
        <ul  class=" links ">
        <% if !user_signed_in? %>
          <li><%= link_to 'Sign In', new_user_session_path %></li>
          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
        <% end %>
            <li> <%= link_to "Advanced Search", new_search_path %> </li>

            <li> <%= link_to "Reviews", reviews_path %> </li>
            <li> <%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
      </ul>
    </div>
    </div>
    </div>


  
    </div>


    <% if flash.any? %>
      <div class="flash">
        <div class="container">
          <%= flash[:alert] %>
    <% end %>
    <%= yield %>
  </body>
</html>
