
<div class = "container-fluid">

    <ul class = "col-lg-12 contact-form ">
      <h1 class = "contact"> Contact HathawayHomes-MA </h1>
      <div class = <"message_form">
      <%= bootstrap_form_for(@mylisting) do |f| %>
        <%= notice %>
          <%= @message.errors.full_messages.join(', ') %>
            <li><%= f.label :name, 'Name (First and Last)'%></br> <%= f.text_field :name, placeholder: 'Name' %></li>
            <li><%= f.label :email, 'Email'%></br><%= f.email_field :email, placeholder: 'Email' %></li>
            <li><%= f.label :phone_number, 'Phone Number'%></br><%= f.text_field :phone_number, placeholder: 'Phone Number' %></li>
            <li><%= f.label :body, 'Message',class: 'message_label'%></br> <%= f.text_area(:body, cols: 80, rows: 10, class: 'message_body', placeholder: "If you are interested in buying or selling a listing reach out to me today")%></li>
            <li><%= f.submit 'Send', id: "message_button" %></li>
      <% end %>
    </div>
    </ul>
  </div>
