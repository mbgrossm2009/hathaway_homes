<div class = "background_image">
  <h1 class = "welcome_title"> Welcome to HathawayHomes-MA </h1>

  <div class = "simple_search">
       <%= form_tag(listings_path, :method => "get", id: "search_form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Quick Search of Listings" %>
        <%= submit_tag "Search", :name => nil, id: 'search_button' %>
      <% end %>
    </div>
  </div>
<div class="about_section container-fluid">
