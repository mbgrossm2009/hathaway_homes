<!-- <%= link_to "Add a listing", new_listing_path, id: 'add_listing_homepage' %> -->

<div class="listingsection container-fluid">
  <h1 class = "my_listings"> My Listings </h1>

  <% @listings.each do |listing| %>
  <div class = "col-lg-4 listing-info">
        <% listing.listing_photo.each_with_index do |photo, index| %>
          <% if index == 0 %>
            <div class="col-lg-12"><%= image_tag(photo.url, id: "all_photos") %></div>
         <% end %>
        <% end %>
        <div class="col-lg-12 listing_description"> Description: <%= listing.description%></div>

        <ul class= "col-lg-12">
              <li>House Style: <%= listing.house_style %></li>
              <li>Street Address: <%= listing.street_address%></li>
              <li>Town: <%= listing.town%> </li>
              <li>State: <%= listing.state%></li>
              <li>Zipcode: <%= listing.zipcode%></li>
              <li><%= link_to 'More Information', listing %></li>
      </ul>
  </div>
    <% end %>



  <% if @listings.blank? %>
      <h4 class = "no_results">There are no listings containing the term <%= params[:search] %></h4>
  <% end %>
