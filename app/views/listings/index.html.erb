  <ul class= "listing_info">
    <% @listings.each do |listing| %>
    <li>House Style: <%= listing.house_style  %></li>
    <li>Street Address: <%= listing.street_address%></li>
    <li>Town: <%= listing.town%> </li>
    <li>State: <%= listing.state%></li>
    <li>Zipcode: <%= listing.zipcode%></li>
    <%= link_to 'More Information', listing %>
  </ul>
  <% end %>


  <div class="search_form">
    <%= form_tag(listings_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Listings" %>
    <%= submit_tag "Search", :name => nil %>
  <% end %>

  <% if @listings.blank? %>
      <h4>There are no cell phones containing the term <%= params[:search] %>.</h4>
      <% end %>
