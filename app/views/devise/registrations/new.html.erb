<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

    <%= f.input :first_name, label: 'First Name', required: true, autofocus: true %>
    <%= f.input :last_name, label: 'Last Name', required: true %>
    <%= f.input :phone_number, label: 'Phone Number', required: true %>
    <%= f.input :email, label: 'Email', required: true, autofocus: true %>
    <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "password confirmation", required: true %>

    <%= f.button :submit, "Sign up" %>
<% end %>

<%= render "devise/shared/links" %>
